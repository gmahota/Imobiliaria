<%= simple_nested_form_for (@cidade) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :descricao %>
  </div>
  <fieldset>
    	<legend>Localizacoes</legend> 
        
        <%= f.fields_for :locations  ,  :html => {:multipart => true} do |doc| %>
         
    		<%= doc.input :descricao %>
    		
 
          
          <%= doc.link_to_remove "Apagar" ,class: "btn btn-small btn-danger" %>
        
        <% end %>
        
        
           
        
        <p><%= f.link_to_add "Adicionar Localizacoes", :locations %></p>
        </div>
    </fieldset>



  <div class="form-actions">
    <%= f.button :submit %>
  </div>


<% end %>
