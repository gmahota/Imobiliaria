<h1>Lista de Usuarios</h1>

<text id = "alerta"><%= @alert %></text>
<table class="table">
  <tr>
    <th>Nome</th>
    <th>Email</th>
    
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name , user_path(user)%></td>
    <td><%= user.email %></td>
    
    <td>
    <% if can? :update, user %>
      <%= link_to 'Alterar', edit_user_path(user), class: "btn btn-small btn-info" %></td>
    <% end %>
    <td>
    <% if can? :update, user %>
      <%= link_to 'Eliminar', user, class: "btn btn-small btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<div class="form-actions">
<center>
<%= link_to '+ Novo Usuario', new_user_path, class: "btn btn-small btn-info"%>
</center>
</div>