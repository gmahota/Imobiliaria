<h1>Editar Resposta</h1>

<%= simple_form_for @foto , :url => { :action => :update } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :descricao %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Show', @fotosresposta %> |
<%= link_to 'Back', fotosresposta_path %>
