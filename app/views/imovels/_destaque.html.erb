      <%#= link_to (image_tag "#{imovel.referencia}-principal.jpg", class:"img-polaroid", :size => "200x200"), imovel_path(imovel.referencia)%>
      <%= imovel.tipoImovel%>
    </p>        
      
    </br>
     
<% end %>