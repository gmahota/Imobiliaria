<% if !current_user %>

<fieldset>
    <legend>Destaque</legend> 

<%  
  @imovelApartamentos = Imovel.procurar("Apartamento" , "Destaque")
  #Imovel.where(:estatuto => )
  #@imovelApartamentos =Imovel.where(:tipoImovel => )
  @i=0
%>          

<% if @imovelApartamentos.count > 0 %>


<div id="myCarousel3" class="carousel slide">  
  <!-- Carousel items -->  
  <div class="carousel-inner">  
    
    <% @imovelApartamentos.each do |imovel| %> 
      
                     <% if @i==0%>
                        <div class="item active">
                        <%else%>
                  <div class="item">                  
                      <%end%>
      <%= link_to (image_tag imovel.getImagemGeral, :size => "200x200") , imovel_path(imovel) %>
                               
      <%= imovel.tipoImovel%>
      </div>
  
    </br>
     <%@i=@i+1%>
<% end %>
      
    
  </div>  
  <!-- Carousel nav -->  
  <a class="carousel-control left" href="#myCarousel3" data-slide="prev">‹</a>  
  <a class="carousel-control right" href="#myCarousel3" data-slide="next">›</a>  
</div> 

<% end %>
 

