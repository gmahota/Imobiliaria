<% if !current_user %>

<fieldset>
    <legend>Destaque</legend> 

<%  
  @imovels =Imovel.where(:estatuto => "Destaque")
  @imovels =Imovel.where(:tipoImovel => "Apartamento")
  @i=0
%>          



<div id="myCarousel1" class="carousel slide">  
  <!-- Carousel items -->  
  <div class="carousel-inner">  
    
    <% @imovels.each do |imovel| %> 
      
                     <% if @i==0%>
                        <div class="item active">
                        <%else%>
                  <div class="item">                  
                      <%end%>
      <%= link_to (image_tag imovel.getImagemGeral, :size => "200x200") , imovel_path(imovel) %>
                               
      <%= imovel.tipoImovel%>
      </div>
  
    </br>
     <%@i=@i+1%>
<% end %>
      
     
  </div>  
  <!-- Carousel nav -->  
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">‹</a>  
  <a class="carousel-control right" href="#myCarousel" data-slide="next">›</a>  
</div> 




</fieldset>
<% end %>

