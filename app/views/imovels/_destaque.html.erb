<% if !current_user %>

<fieldset>
    <legend>Destaque</legend> 

<%  @imovels =Imovel.find(:all,:conditions => ["estado = ? ","Destaque"])
%>          

<% @imovels.each do |imovel| %> 
    <p>
      <% imovel.documentos.each do |doc| %>
                              <% if doc.descricao == "Geral" %> 
                                    <%= link_to (image_tag doc.avatar.url, :size => "200x200") , imovel_path(imovel) %>
                                  <%end%>
                              <%end%>
 
      <%= imovel.tipoImovel%>
    </p>        
      
    </br>
     
<% end %>
</fieldset>
<% end %>