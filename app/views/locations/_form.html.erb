<%= simple_form_for(@location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :descricao %>
    <%= select("location","cidade_id", Cidade.all.collect { |p| [p.descricao,p.id ]}, {include_blank: 'None'})%>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
