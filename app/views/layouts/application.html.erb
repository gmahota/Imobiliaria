<!DOCTYPE html>
<html>
<head>
  <title>REC</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Rec</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Inicio", root_path %></li>
          <li><%= link_to "Imoveis", imovels_path %></li>
          
          <% if can? :update, @user %>
          
          <li class="dropdown"> 
            <a class="dropdown-toggle" href="#" data-toggle="dropdown">
              Ferramentas
              <i class="caret"></i>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Cidades", cidades_path %></li>
              <li><%= link_to "Estados", estados_path %></li>
              <li><%= link_to "Tipos de Negocio", tipo_negocios_path %></li>
              <li><%= link_to "Tipo de Imovel", tipo_imovels_path %></li>
            </ul>  
          </li>
          
          <% end%>
          
        </ul>
      </div>
      
      <!-- Start of the nav bar content -->
      <div class="nav-collapse"><!-- Other nav bar content -->
        
 
        <!-- The drop down menu -->
        <ul class="nav pull-right">
          
          
           <% if current_user %>  
            
              
            <li> <%= link_to "Editar Profile", edit_user_path(current_user) %> </li>  
            <li class="divider-vertical"></li>
            <li>  <%= link_to "Sair", logout_path %> </li>    
            
      <% else %>  
            <li><%= link_to "Registar", new_user_path %></li>  
            <li class="divider-vertical"></li>
            <li>  <%= link_to "Entrar", login_path %> </li>
          <% end %> 
          
          
          
          
          
         <%# <li class="dropdown">%>
         <%#   <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
            <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
              <!-- Login form here -->
            </div>
          </li>%>
        </ul>
      </div>
    </div>
  </div>
</div>
  
<div class="container">
  <div class="row">
    <div class="span3">
    </br>
    
      <%= render 'imovels/pesquisa' %>   
    </div>
    <div class="span6">
    <%- flash.each do |k, v| %>
        <div class="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Alerta!</strong> <div id="<%= k%>"><%= v %></div>.
      </div>
        
      
      <% end %>
      
      <%= yield %>
   </div>
    <div class="span3">
      <%= render 'imovels/destaque' %> 
      
      
      
    
    </div>
  </div>
</div>
          
<div class = "container">
  <div class="row">
    <div class = "span10">
      <%= render 'imovels/destaques' %>
    </div>
  </div>
</div>

</body>
</html>
